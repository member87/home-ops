{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "argocd": { 
    "managerFilePatterns": ["/\\.yaml$/"] 
  },
  "kubernetes": {
    "managerFilePatterns": ["/\\.yaml$/"]
  },
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchDepNames": ["traefik"],
      "sourceUrl": "https://github.com/traefik/traefik"
    }
  ]
}
